file = open("data.txt", "r", encoding="utf-8")
text=file.read()
file.close()
file1 = open("data1.txt", "r", encoding="utf-8")
text1=file1.read()
file1.close()
file2 = open("data2.txt", "r", encoding="utf-8")
text2=file2.read()
file2.close()
file3 = open("data3.txt", "r", encoding="utf-8")
text3=file3.read()
file3.close()
file4 = open("data4.txt", "w", encoding="utf-8")
file4.write(text + " " + text1 + " " + text2 + " " + text3)
file4.close()
